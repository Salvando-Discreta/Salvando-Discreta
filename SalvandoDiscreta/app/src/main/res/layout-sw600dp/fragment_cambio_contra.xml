<?xml version="1.0" encoding="utf-8"?>
<layout >
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".CambioContraFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <TextView
                android:id="@+id/txt_recuperar_contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/change_pass"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textSize="40sp"
                tools:ignore="MissingConstraints"
                />


            <TextView
                android:id="@+id/txt_cambie_su_contraseña"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/morado_oscuro"
                android:text="@string/new_pass"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="200dp"
                tools:ignore="MissingConstraints"
                />

            <EditText
                android:id="@+id/outlined_new_pass"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/rectangle_definition"
                android:hint=""
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_cambie_su_contraseña"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/txt_confirme_new_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/morado_oscuro"
                android:text="@string/confirme_new_pass"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="400dp"
                tools:ignore="MissingConstraints"
                />

            <EditText
                android:id="@+id/outlined_confirme_new_pass"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_marginTop="450dp"
                android:background="@drawable/rectangle_definition"
                android:hint=""
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_confirme_new_pass"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/btn_change_pass_word"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="600dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/change_pass_word"
                android:backgroundTint="@color/colorfucsia"
                app:cornerRadius="@android:dimen/app_icon_size"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="660dp"
                android:gravity="center"
                android:text="@string/can_cel"
                android:backgroundTint="@color/colorfucsia"
                app:cornerRadius="@android:dimen/app_icon_size"
                android:textSize="28sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_salvando_discreta_eclipse"
                android:layout_width="780dp"
                android:layout_height="215dp"
                android:layout_marginTop="740dp"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/salvando_discreta"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>