<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CambioContraFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <TextView
                android:id="@+id/txt_recuperar_contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/change_pass"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/txt_cambie_su_contraseña"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/morado_oscuro"
                android:text="@string/new_pass"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="75dp"
                tools:ignore="MissingConstraints"
                />

            <EditText
                android:id="@+id/outlined_new_pass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/rectangle_definition"
                android:hint=""
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_cambie_su_contraseña"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/txt_confirme_new_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/morado_oscuro"
                android:text="@string/confirme_new_pass"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="160dp"
                tools:ignore="MissingConstraints"
                />

            <EditText
                android:id="@+id/outlined_confirme_new_pass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="188dp"
                android:background="@drawable/rectangle_definition"
                android:hint=""
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_confirme_new_pass"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/btn_change_pass_word"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="250dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/change_pass_word"
                android:backgroundTint="@color/colorfucsia"
                app:cornerRadius="@android:dimen/app_icon_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="295dp"
                android:gravity="center"
                android:text="@string/can_cel"
                android:backgroundTint="@color/colorfucsia"
                app:cornerRadius="@android:dimen/app_icon_size"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>