<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecuperarContraFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/txt_recuperar_contraseÃ±a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/recover_password"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/txt_descripcion_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/message_recover_password"
                android:textColor="@color/morado_oscuro"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_ingrese_su_correo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.169"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/txt_ingrese_su_correo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/morado_oscuro"
                android:text="@string/enter_your_email"
                android:textSize="14sp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="220dp"
                tools:ignore="MissingConstraints"
                />

            <EditText
                android:id="@+id/outlined_user_name"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/rectangle_definition"
                android:hint="example@gmail.com"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ingrese_su_correo"
                tools:ignore="MissingConstraints" />


            <Button
                android:id="@+id/btn_send"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="310dp"
                android:gravity="center"
                android:text="@string/send_email"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorfucsia"
                app:cornerRadius="@android:dimen/app_icon_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

</layout>
