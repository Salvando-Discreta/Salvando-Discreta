<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <TextView
        android:id="@+id/txt_recuperar_contraseÃ±a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="550dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/recover_password"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textSize="25sp"
        tools:ignore="MissingConstraints"
         />

    <TextView
        android:id="@+id/txt_descripcion_usuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="280dp"
        android:gravity="center"
        android:textColor="@color/morado_oscuro"
        android:text="@string/message_recover_password"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/txt_ingrese_su_correo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/morado_oscuro"
        android:text="@string/enter_your_email"
        android:textSize="14sp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="260dp"
        tools:ignore="MissingConstraints"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlined_user_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:hint=""
        android:textColorHint="@color/pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ingrese_su_correo"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="450dp"
            android:gravity="center"
            android:text="@string/send_email"
            android:backgroundTint="@color/colorfucsia"
            app:cornerRadius="@android:dimen/app_icon_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_salvando_discreta_eclipse"
        android:layout_width="750dp"
        android:layout_height="215dp"
        android:layout_marginTop="520dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/salvando_discreta"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>